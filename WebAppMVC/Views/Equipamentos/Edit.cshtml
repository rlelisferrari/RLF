@using System.Linq
@model WebAppMVC.ViewModels.CreateEquipamentoVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Equipamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Equipamento.Nome" class="control-label"></label>
                <input asp-for="Equipamento.Nome" class="form-control" />
                <span asp-validation-for="Equipamento.Nome" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Equipamento.Id" />
            <div>
                <table>
                    @foreach (var item in Model.TodosTiposEquipamento)
                    {
                        <input name="tipoEquipamento" type="checkbox" value="@item.Id" checked="@Model.Equipamento.EquipamentoTipoEquipamento.Select(ete => ete.TipoEquipamentoId).ToList().Contains(@item.Id)"/>
                        <label>@item.Nome</label>
                    }
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
